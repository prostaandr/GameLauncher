<Application x:Class="GameLauncher.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameLauncher.WPF"
             StartupUri="Views/GamePage.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="backgroundColor" Color="#1e1e1e"/>
        <SolidColorBrush x:Key="headerBackgroundColor" Color="#370617"/>
        <SolidColorBrush x:Key="mainFontColor" Color="White"/>
        <SolidColorBrush x:Key="titleFontColor" Color="DarkGray"/>
    </Application.Resources>
</Application>
