<Window x:Class="GameLauncher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="idTextBox" Height="20"/>
            <TextBox x:Name="nameTextBox" Height="20"/>
            <TextBox x:Name="descriptionTextBox" Height="20"/>
            <TextBox x:Name="priceTextBox" Height="20"/>
            <TextBox x:Name="releaseDateTextBox" Height="20"/>
            <TextBox x:Name="typeTextBox" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
