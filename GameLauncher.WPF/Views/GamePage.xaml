<Window x:Class="GameLauncher.WPF.Views.GamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher.WPF.Views" xmlns:col="clr-namespace:System.Collections;assembly=netstandard" xmlns:sys="clr-namespace:System;assembly=netstandard"
        xmlns:enums="clr-namespace:GameLauncher.Model.Enum;assembly=GameLauncher.Model"
        xmlns:converters="clr-namespace:GameLauncher.WPF.Helpers.Converters"
        mc:Ignorable="d"
        Title="GamePage" Height="Auto" Width="1280"
        Background="{StaticResource backgroundColor}"
        Foreground="{StaticResource mainFontColor}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <col:ArrayList x:Key="menuButtons">
            <sys:String>Магазин</sys:String>
            <sys:String>Библиотека</sys:String>
        </col:ArrayList>

        <converters:EnumConverter x:Key="enumConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0 0 0 1.5" BorderBrush="Black">
            <Grid Background="{StaticResource headerBackgroundColor}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="15"></RowDefinition>
                </Grid.RowDefinitions>
                <ListBox Grid.Row="1" ItemsSource="{StaticResource menuButtons}" Background="{StaticResource headerBackgroundColor}" BorderThickness="0" Margin="30 0 0 0">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" FontSize="20" Background="{StaticResource headerBackgroundColor}" Foreground="{StaticResource mainFontColor}" BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource headerBackgroundColor}"></Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border  Background="{StaticResource headerBackgroundColor}" BorderThickness="0" Padding="10" >
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="false"/>
                            <Setter Property="Height" Value="50"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Focusable" Value="False" />
                                    <Setter Property="BorderBrush" Value="{StaticResource headerBackgroundColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition MinWidth="700"/>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="0.7*" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="gameNameTextBlock"
                       Grid.Column="1" Grid.Row="0"
                       Text="GameName" FontSize="32"
                       Background="{StaticResource backgroundColor}"
                       Margin="0,15,0,15"/>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>
                    <Image x:Name="mediaImage" Grid.Row="0" Stretch="Uniform"></Image>
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden"
                                  Grid.Row="1" Margin="0 0 0 -23" CanContentScroll="True">
                        <ListBox x:Name="mediaListBox" 
                             Grid.Row="1" 
                             MaxHeight="120"
                             Background="{StaticResource backgroundColor}" 
                             SelectionChanged="mediaListBox_SelectionChanged"
                             BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
                <Grid Grid.Column="3" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="150"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Image x:Name="posterImage"></Image>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="49*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="shortDescriptionTextBlock" Text="ShortDescription" TextWrapping="Wrap"/>
                    </Grid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="ОБЗОРЫ:" Foreground="{StaticResource titleFontColor}" Width="120" />
                        <TextBlock x:Name="reviewsPersentTextBlock" Text="ReviewsPersents"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock Text="ДАТА ВЫХОДА:" Foreground="{StaticResource titleFontColor}" Width="120"/>
                        <TextBlock x:Name="releaseDateTextBlock" Text="ReleaseDate"/>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="РАЗРАБОТЧИК:" Foreground="{StaticResource titleFontColor}" Width="120" />
                            <TextBlock x:Name="develoverTextBlock" Text="Developer"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ИЗДАТЕЛЬ:" Foreground="{StaticResource titleFontColor}" Width="120" />
                            <TextBlock x:Name="publisherTextBlock" Text="Publisher"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="5">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                <TextBlock x:Name="priceTextBlock" Text="Price" FontSize="16" />
                                <TextBlock Text=" руб." FontSize="16" />
                            </StackPanel>
                            <Button Content="ДОБАВИТЬ В КОРЗИНУ" Height="40" FontSize="14" Margin="0 5 0 0"></Button>
                            <Button Content="В СПИСОК ЖЕЛАЕМОГО" Height="40" FontSize="14" Margin="0 5 0 0"></Button>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="4" Grid.Column="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0 0 0 20">
                            <StackPanel>
                                <TextBlock Text="Жанры: " Foreground="{StaticResource titleFontColor}" FontSize="14"></TextBlock>
                                <TextBlock x:Name="genresTextBlock" Text="GenresValues" FontSize="14" TextWrapping="Wrap"></TextBlock>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Margin="0 0 0 20">
                            <StackPanel>
                                <TextBlock Text="Особенности: " Foreground="{StaticResource titleFontColor}" FontSize="14"></TextBlock>
                                <TextBlock x:Name="featuresTextBlock" Text="FeaturesValues" FontSize="14" TextWrapping="Wrap"></TextBlock>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="2" Margin="0 0 0 20">
                            <StackPanel>
                                <TextBlock Text="Языки: " Foreground="{StaticResource titleFontColor}" FontSize="14"></TextBlock>
                                <TextBlock x:Name="languagesTextBlock" Text="LanguagesValues" FontSize="14" TextWrapping="Wrap"></TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0" Margin="0 0 0 10">
                            <TextBlock Text="Системные требования" FontSize="18"/>
                            <Separator Margin="0 25 0 0">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleX="2" />
                                </Separator.RenderTransform>
                            </Separator>
                        </Grid>
                        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="МИНИМАЛЬНЫЕ: " Margin="0 0 0 8"></TextBlock>
                            <ListBox x:Name="minSystemRequirementsListBox" 
                                 Background="{StaticResource backgroundColor}"
                                 Foreground="{StaticResource titleFontColor}"
                                 BorderThickness="0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0 0 0 8"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Focusable" Value="false"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="РЕКОМЕНДУЕМЫЕ: " Margin="0 0 0 8"></TextBlock>
                            <ListBox x:Name="recSystemRequirementsListBox"
                                 Background="{StaticResource backgroundColor}"
                                 Foreground="{StaticResource titleFontColor}"
                                 BorderThickness="0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Margin" Value="0 0 0 8"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Focusable" Value="false"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="5" Grid.Column="1" Margin="0 15 0 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Отзывы" FontSize="18"/>
                        <Separator Margin="0 25 0 0">
                            <Separator.RenderTransform>
                                <ScaleTransform ScaleX="1" />
                            </Separator.RenderTransform>
                        </Separator>
                        <ListBox x:Name="reviewsListBox" Grid.Row="1" BorderThickness="0" Background="{StaticResource backgroundColor}" Foreground="{StaticResource mainFontColor}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Row="0" Grid.Column="1" Margin="10 10 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="180"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderBrush="White" BorderThickness="1">
                                                <Image Source="{Binding User.IconUrl}" Stretch="Uniform" Height="32" Width="32"></Image>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{Binding User.Nickname}" Margin="10 6 0 0" FontSize="16"></TextBlock>
                                            <TextBlock Grid.Column="2" Text="{Binding Grade, Converter={StaticResource enumConverter}}" FontSize="20"></TextBlock>
                                            </Grid>
                                        <Separator Grid.Row="1" Grid.Column="1" Margin="0 5 0 0" VerticalAlignment="Top">
                                            <Separator.RenderTransform>
                                                <ScaleTransform ScaleX="5" />
                                            </Separator.RenderTransform>
                                        </Separator>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Comment}" Margin="10 15" FontSize="14" TextWrapping="Wrap" MaxWidth="660"></TextBlock>
                                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10 0 0 10">
                                            <TextBlock Text="Опубликовано:  " Foreground="{StaticResource titleFontColor}"></TextBlock>
                                            <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy}"></TextBlock>
                                        </StackPanel>

                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="0 15 0 0"/>
                                    <Setter Property="Background" Value="{StaticResource headerBackgroundColor}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
